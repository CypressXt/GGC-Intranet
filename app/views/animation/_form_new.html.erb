<%= form_for @animation, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
<div class="form-group">
    <%= label_tag 'name', "Title" %>
    <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            <%= label_tag 'nb_participants', "Participants number" %>
            <%= f.number_field  :nb_participants, in: 1..100, step: 1, class: 'form-control' %>
        </div>
    </div>
</div>
<div class="form-group">
    <%= label_tag 'description', "Description" %>
    <%= f.cktext_area :description, class: 'form-control', ckeditor: { uiColor: '#FFFFFF' }  %>
</div>
<div class="form-group">
    <%= label_tag 'iframe_url', "Embeded (optional)" %>
    <%= f.text_field :iframe_url, class: 'form-control' %>
</div>
<div class="form-group">
    <%= label_tag 'date', "Starting date & time" %>
    <%= f.text_field :date, class: 'form-control date_picker' %>
</div>
<div class="form-group">
    <%= f.submit "Create", class: "btn btn-primary" %>
</div>
<% end %>
