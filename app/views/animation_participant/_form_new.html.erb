<%= form_for @animation_participant, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
<div class="form-group">
    <%= label_tag 'team_name', "Team name" %>
    <%= f.text_field :team_name, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.submit "Join the animation", class: "btn btn-primary" %>
</div>
<% end %>
