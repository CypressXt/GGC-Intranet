<div class="container-fluid">
    <div class="page-header">
        <h1>Geneva Gaming Convention 2016 edition</h1>
    </div>
    <div class="row" style="height:60vh;">
        <div class="col-md-4">
            <h4>Lastest infos</h4>
            <% if is_admin %>
            <p>
                <%= link_to "New info", new_info_path, :class => "btn btn-primary" %>
            </p>
            <% end %>
            <div style="max-height:60vh;overflow-y:scroll; overflow-x:hidden;">
                <% @infos.each do |info| %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <strong><%= info.title.capitalize %></strong> |
                                <%= info.user.nickname.capitalize %>,
                                <span class="label label-info"><%= l info.created_at %></span>
                            </div>
                            <div class="panel-body">
                                <%= info.content.html_safe %>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-4">
            <h4>Next animations</h4>
            <% if is_admin %>
            <p>
                <%= link_to "New animation", new_animation_path, :class => "btn btn-primary" %>
            </p>
            <% end %>
            <div style="max-height:60vh;overflow-y:scroll; overflow-x:hidden;">
                <% @animations.each do |animation| %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default panel-animation" data-animation-id="<%= animation.id %>">
                            <div class="panel-heading">
                                <strong><%= animation.name.capitalize %></strong> |
                                <%= animation.nb_participants %> places,
                                <%= animation.user.nickname.capitalize %>,
                                <span class="label label-info"><%= l animation.date %></span>
                            </div>
                            <div class="panel-body">
                                <%= animation.description.html_safe %>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-4">
            <% if is_logged_in %>
            <h4><%= current_logged_user.nickname.capitalize%>'s animations</h4>
            <p style="margin-bottom: 1.65em;"><span class="label label-primary">Your custom planning @GGC-2016</span></p>
            <div style="max-height:60vh;overflow-y:scroll; overflow-x:hidden;">
                <% @your_animation_participation.each do |participation| %>
                <% animation = participation.animation %>
                <% if animation %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default panel-animation" data-animation-id="<%= animation.id %>">
                            <div class="panel-heading">
                                <strong><%= animation.name.capitalize %></strong> |
                                <%= animation.nb_participants %> places,
                                <%= animation.user.nickname.capitalize %>,
                                <span class="label label-info"><%= l animation.date %></span>
                            </div>
                            <div class="panel-body">
                                <%= animation.description.html_safe %>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>
